---
import MenuLine from "@components/ui/icons/menu-line.svg";
import InstagramLogo from "@components/ui/icons/instagram-line.svg";
import LinkedInLogo from "@components/ui/icons/linkedin-line.svg";
import GithubLogo from "@components/ui/icons/github-line.svg";

const { title } = Astro.props;

const navItems = [
  { label: "Home", path: "/" },
  { label: "About", path: "/about" },
];
---

<!doctype html>
<html class="m-0" lang="en" data-theme="light">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" href="/favicon.ico?" type="image/x-icon" />
    <link rel="shortcut icon" href="/favicon.ico?" type="image/x-icon" />
    <link
      rel="stylesheet"
      href="https://fonts.googleapis.com/css?family=Montserrat:100,100italic,200,200italic,300,300italic,400,400italic,500,500italic,600,600italic,700,700italic,800,800italic,900,900italic%7CVarela+Round:400%7COpen+Sans:300,300italic,400,400italic,600,600italic,700,700italic,800,800italic%7CRubik:300,300italic,regular,italic,500,500italic,700,700italic,900,900italic%7CBarlow:100,100italic,200,200italic,300,300italic,regular,italic,500,500italic,600,600italic,700,700italic,800,800italic,900,900italic"
      media="all"
    />
    <meta name="generator" content={Astro.generator} />
    <title>{`${title || "Brain Dump ðŸ’©"} - Danyal`}</title>
  </head>
  <body class="h-screen w-full">
    <div class="drawer h-full">
      <input id="app-drawer" type="checkbox" class="drawer-toggle" />
      <div class="drawer-content flex flex-col">
        <!-- Navbar -->
        <div
          class="navbar bg-base-300 w-full sticky top-0 z-10 border-neutral border-b"
        >
          <div class="flex-none lg:hidden">
            <label
              for="app-drawer"
              aria-label="open sidebar"
              class="btn btn-square btn-ghost"
            >
              <MenuLine size={24} />
            </label>
          </div>
          <div class="mx-2 flex-1 px-2">
            <a href="/">Hello ðŸ’©</a>
          </div>
          <div class="hidden flex-none lg:block">
            <ul class="menu menu-horizontal">
              <!-- Navbar menu content here -->
              {
                navItems.reverse().map((item) => (
                  <li>
                    <a href={item.path}>{item.label}</a>
                  </li>
                ))
              }
            </ul>
          </div>
        </div>
        <!-- Page content here -->
        <main class="h-full">
          <slot />
        </main>

        <footer class="footer bg-neutral text-neutral-content items-center p-4">
          <aside class="grid-flow-col items-center">
            <svg
              width="36"
              height="36"
              viewBox="0 0 24 24"
              xmlns="http://www.w3.org/2000/svg"
              fill-rule="evenodd"
              clip-rule="evenodd"
              class="fill-current"
            >
              <path
                d="M22.672 15.226l-2.432.811.841 2.515c.33 1.019-.209 2.127-1.23 2.456-1.15.325-2.148-.321-2.463-1.226l-.84-2.518-5.013 1.677.84 2.517c.391 1.203-.434 2.542-1.831 2.542-.88 0-1.601-.564-1.86-1.314l-.842-2.516-2.431.809c-1.135.328-2.145-.317-2.463-1.229-.329-1.018.211-2.127 1.231-2.456l2.432-.809-1.621-4.823-2.432.808c-1.355.384-2.558-.59-2.558-1.839 0-.817.509-1.582 1.327-1.846l2.433-.809-.842-2.515c-.33-1.02.211-2.129 1.232-2.458 1.02-.329 2.13.209 2.461 1.229l.842 2.515 5.011-1.677-.839-2.517c-.403-1.238.484-2.553 1.843-2.553.819 0 1.585.509 1.85 1.326l.841 2.517 2.431-.81c1.02-.33 2.131.211 2.461 1.229.332 1.018-.21 2.126-1.23 2.456l-2.433.809 1.622 4.823 2.433-.809c1.242-.401 2.557.484 2.557 1.838 0 .819-.51 1.583-1.328 1.847m-8.992-6.428l-5.01 1.675 1.619 4.828 5.011-1.674-1.62-4.829z"
              ></path>
            </svg>
            <p>Copyright Â© {new Date().getFullYear()} - All right reserved</p>
          </aside>
          <nav
            class="grid-flow-col gap-4 md:place-self-center md:justify-self-end"
          >
            <a
              class="link hover:text-primary"
              href="https://www.instagram.com/talouchy_art"
              target="_blank"
            >
              <InstagramLogo size={36} />
            </a>
            <a
              class="link hover:text-primary"
              href="https://www.linkedin.com/in/danyallakzian/"
              target="_blank"
            >
              <LinkedInLogo size={36} />
            </a>
            <a
              class="link hover:text-primary"
              href="https://github.com/setTimeoutInfinity"
              target="_blank"
            >
              <GithubLogo size={36} />
            </a>
          </nav>
        </footer>
      </div>
      <div class="drawer-side">
        <label
          for="app-drawer"
          aria-label="close sidebar"
          class="drawer-overlay"></label>
        <ul class="menu bg-base-200 min-h-full w-80 p-4">
          <!-- Sidebar content here -->
          {
            navItems.map((item) => (
              <li>
                <a href={item.path}>{item.label}</a>
              </li>
            ))
          }
        </ul>
      </div>
    </div>
  </body>
</html>
