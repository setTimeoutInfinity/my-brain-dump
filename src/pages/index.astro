---
import { SEO } from "astro-seo";
import Layout from "@layouts/Layout.astro";
import Hero from "@components/ui/Hero.astro";

import HeroImage from "@assets/home-page-hero.webp";
---

<Layout>
  <SEO
    slot="seo"
    description="Danyal Lakzian's personal website: where sanity goes to die and questionable life choices are celebrated."
    openGraph={{
      basic: {
        title: "Danyal Lakzian",
        type: "website",
        image: HeroImage.src,
        url: "https://lakzian.com",
      },
    }}
  />
  <link slot="head" rel="preload" href={HeroImage.src} as="image" />

  <Hero />
</Layout>
